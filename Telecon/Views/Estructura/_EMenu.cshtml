    <div class="MenuGroup">
        <button type="button" id="HomeButton" onclick="Home();">Home</button>
        <button type="button" id="ProductButton" onclick="Products();">Available Products</button>
        <button type="button" id="ServiceButton" onclick="Services();">Services</button>
        <button type="button" id="GeneralButton" onclick="GeneralInfo();">General Information</button>
        <button type="button" id="ContactButton" onclick="ContactInfo();">Contact Information</button>
