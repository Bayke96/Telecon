            </ul>

        </div>
    </div>

    @if (User.Identity.IsAuthenticated == true && User.IsInRole("Admin"))
    {
        <button type="button" style="visibility: visible;" class="AdminButton" id="main-admin-button" onclick="AdminPanel();">Administration Panel</button>
    }
    else
    {
        <button type="button" style="visibility: hidden;" class="AdminButton" id="main-admin-button" onclick="AdminPanel();">Administration Panel</button>
    }


    

</div>



