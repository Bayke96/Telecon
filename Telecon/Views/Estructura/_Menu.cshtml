
<div class="MenuP">
    <div class="MenuGroup">
        <button type="button" id="HomeButton" onclick="Inicio();">Inicio</button>
        <button type="button" id="ProductButton" onclick="Productos();">Productos Disponibles</button>
        <button type="button" id="ServiceButton" onclick="Servicios();">Servicios</button>
        <button type="button" id="GeneralButton" onclick="InformacionGeneral();">Información General</button>
        <button type="button" id="ContactButton" onclick="InformacionContacto();">Información de Contacto</button>
    </div>

    <div class="MenuSecundario">
        @if (User.Identity.IsAuthenticated == false)
        {
            <button type="button" id="LoginButton" onclick="Conectar();">Ingresar</button>
        }
        else
        {
            <button type="button" id="LoginButton" onclick="Conectar();" style="background-image: url('../../Style/Media/user-profile(1).png');">Mi Perfil</button>
        }
        <div class="btn-group">
            <button type="button" id="LanguageM" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                Lenguaje
                <span class="caret"></span>
            </button>

            <ul class="dropdown-menu" id="Languages" role="menu">
                <li class="text-center" id="Español" onclick="Español();"><a href="#"><img id="SpanishFlag" class="img-responsive" src="~/Style/Media/SpanishFlag.png"><b>Español</b></a></li>
                <li class="text-center" id="English" onclick="English();"><a href="#"><img id="EnglishFlag" class="img-responsive" src="~/Style/Media/EnglishFlag.jpg"><b>English</b></a></li>
            </ul>

        </div>
    </div>

    @if (User.Identity.IsAuthenticated == true && User.IsInRole("Admin"))
    {
        <button type="button" style="visibility: visible;" class="AdminButton" id="main-admin-button" onclick="PanelAdmin();">Panel de Administración</button>
    }
    else
    {
        <button type="button" style="visibility: hidden;" class="AdminButton" id="main-admin-button" onclick="PanelAdmin();">Panel de Administración</button>
    }


</div>



<script type="text/javascript">

    function Inicio() {
        window.location.href = "/es/inicio";
    }

    function Productos() {
        window.location.href = "/es/productos/1";
    }

    function Servicios() {
        window.location.href = "/es/servicios";
    }

    function InformacionGeneral() {
        window.location.href = "/es/info";
    }

    function InformacionContacto() {
        window.location.href = "/es/contacto";
    }

    function PanelAdmin() {
        window.location.href = "/es/admin";
    }

    function Conectar() {
        window.location.href = "/es/conectar";
    }
   
   

   

  
</script>