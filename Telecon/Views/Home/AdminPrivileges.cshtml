@{
    Layout = "~/Views/Estructura/_Layout.cshtml";
    Page.Title = "Telecon Erickson C.A - Privileges Administration";
}

<div class="PanelPrivilegios">
    @using (@Html.BeginForm("", "", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h2>PRIVILEGES MANAGEMENT</h2>
        <hr />
        <table class="TablaEditar" border="1">
            <tr>
                <td>PROFILE PICS</td>
                <td>
                    <label class="switch">
                        <input type="checkbox" checked>
                        <span class="slider round"></span>
                    </label>
                </td>
            </tr>
            <tr>
                <td>ALLOW PASSWORD CHANGE</td>
                <td>
                    <label class="switch">
                        <input type="checkbox" checked>
                        <span class="slider round"></span>
                    </label>
                </td>
            </tr>
            <tr>
                <td>ALLOW EMAIL CHANGE</td>
                <td>
                    <label class="switch">
                        <input type="checkbox" checked>
                        <span class="slider round"></span>
                    </label>
                </td>
            </tr>
            <tr>
                <td>ALLOW USER LOGIN</td>
                <td>
                    <label class="switch">
                        <input type="checkbox" checked>
                        <span class="slider round"></span>
                    </label>
                </td>
            </tr>
        </table>

        <button type="submit">ACCEPT</button>
        <button type="button" id="ReturnButton" onclick="Retornar();">RETURN</button>
    }


</div>

<script type="text/javascript">

    document.getElementById("main-admin-button").style.visibility = "visible";

    function Retornar() {
        window.location.href = "/en/admin";
    }

    function Español() {
        window.location.href = "/es/admin/privilegios";
    }

    function English() {
        window.location.href = "/en/admin/privileges";
    }

</script>


