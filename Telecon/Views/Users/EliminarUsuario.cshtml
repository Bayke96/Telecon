        <button type="submit" id="BtnSi">SI</button>
        <button type="button" id="BtnNo">NO</button>
    </div>
}


<script type="text/javascript">
    $(document).ready(function () {
        $('.AdminButton').css('visibility', 'visible');

    });



    $(function () {
        $("#BtnNo").click(function () {
            window.location.href = "/es/admin/usuarios";
        });
    });

    $(function () {
        $("#Español").click(function () {
            window.location.href = "/es/admin/usuarios/eliminarusuario";
